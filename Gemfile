source 'http://rubygems.org'

group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-feed"
  # gem "html-proofer"
  gem "rake"
  #gem "github-pages" using this cause error 'Could not open library 'libcurl' on windows
  gem "jekyll-seo-tag"
  gem "jekyll-gist"
  # windows 下需要gem安装 tzinfo tzinfo-data ，然后这样配置
  # https://github.com/aron-bordin/neo-hpstr-jekyll-theme/issues/40
  gem 'tzinfo'
  gem 'tzinfo-data'
  
end

